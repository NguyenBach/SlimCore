{
    "name": "bachnguyen/slim-core",
    "description": "Slim Core",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/NguyenBach/SlimCore",
    "license": "MIT",
    "authors": [
        {
            "name": "Bach Nguyen",
            "email": "bachnq214@gmail.com",
            "homepage": "http://nguyenquangbach.com/"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/database": "^5.8",
        "illuminate/validation": "^5.8",
        "lcobucci/jwt": "^3.2",
        "monolog/monolog": "^1.17",
        "slim/slim": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "BachNguyen\\Core\\": "src/core/",
            "BachNguyen\\App\\" : "src/app/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
